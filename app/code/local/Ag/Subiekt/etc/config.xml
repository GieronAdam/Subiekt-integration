<?xml version="1.0"?>
<config>
  <modules>
    <Ag_Subiekt>
      <version>0.1.0</version>
    </Ag_Subiekt>
  </modules>
  <global>
    <helpers>
      <subiekt>
        <class>Ag_Subiekt_Helper</class>
      </subiekt>
    </helpers>
	<blocks>
	  <subiekt>
		<class>Ag_Subiekt_Block</class>
	  </subiekt>
	</blocks>
	  <models>
		  <subiekt>
			  <class>Ag_Subiekt_Model</class>
		  </subiekt>
	  </models>
	  <resources>
		  <subiekt_setup>
			  <setup>
				  <module>Ag_Subiekt</module>
				  <class>Mage_Sales_Model_Resource_Setup</class>
			  </setup>
			  <connection>
				  <use>core_setup</use>
			  </connection>
		  </subiekt_setup>
		  <orderapi_write>
			  <connection>
				  <use>core_write</use>
			  </connection>
		  </orderapi_write>
		  <orderapi_read>
			  <connection>
				  <use>core_read</use>
			  </connection>
		  </orderapi_read>
	  </resources>
	  <events>
		  <sales_order_place_after>
			  <observers>
				  <ag_subiekt_observer>
					  <type>Singleton</type>
					  <class>Ag_Subiekt_Model_Observer</class>
					  <method>exportOrder</method>
				  </ag_subiekt_observer>
			  </observers>
		  </sales_order_place_after>
	  </events>
  </global>
  <admin>
	<routers>
	  <subiekt>
	    <use>admin</use>
		<args>
		  <module>Ag_Subiekt</module>
		  <frontName>admin_subiekt</frontName>
		</args>
	  </subiekt>
	</routers>
  </admin>
  <adminhtml>
	<menu>
	  <subiekt module="subiekt">
		<title>Subiekt GT</title>
		<sort_order>100</sort_order>
		<children>
		  <subiektbackend module="subiekt">
			<title>Configuration</title>
			<sort_order>0</sort_order>
			<action>adminhtml/system_config/edit/section/subiekt/</action>
		  </subiektbackend>
			<subiektbackendorder module="subiekt">
				<title>OrderSaveTest</title>
				<sort_order>0</sort_order>
				<action>admin_subiekt/adminhtml_subiektbackend/order</action>
			</subiektbackendorder>
		</children>
	  </subiekt>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<subiekt translate="title" module="subiekt">
			  <title>Subiekt GT</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <subiektbackend translate="title">
			<title>Configuration</title>
		  </subiektbackend>
			  </children>
			</subiekt>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<subiekt>
		  <file>subiekt.xml</file>
		</subiekt>
	  </updates>
	</layout>
  </adminhtml>
</config> 